<div class="container">
  <div class="row">
    <div class="col-md-3" >
      <div class="sidebar">
        <h1>User Info</h1>
        <%= image_tag current_user.get_profile_image(100,100) %>
        <div>name</div> <div>><%= current_user.name %></div>
        <div>introduction</div><div><%= current_user.introduction %></div>
        
      <%= link_to edit_user_path(@user.id), class: "btn btn-secondary" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

        <h1>New book</h1>
        <!-- form_with -->
        <%= form_with model: Book.new do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
	
          <h4>opinion</h4>
            <%= f.text_area :body %>
	
              <%= f.submit 'Create Book' %>
          <% end %>
       </div>
    </div>
    <div class = "col-md-8 offset-md-1 ">
      <h2>Users</h2>
      <!--一覧表示部分-->
      <table class="table striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
               <td>
                 <%= link_to user_path(user.id) do%>
                 <%= image_tag user.get_profile_image(100,100) %></td>
                 <% end %>
               <td><%= user.name %></td>
               <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
       </table>
    </div>
  </div>
</div>