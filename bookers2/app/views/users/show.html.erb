<% if flash[:notice] %>
  <div class="alert alert-primary" role="alert">
    <%= notice %>
  </div>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-4" >
<div class="sidebar">
  <h1>User Info</h1>
  <%= image_tag @user.get_profile_image(100,100) %>
  <div>name</div> <div>><%= @user.name %></div>
  <div>introduction</div><div><%= @user.introduction %></div>
  
<%= link_to edit_user_path(@user.id), class: "btn btn-secondary" do %>
          <i class="fas fa-user-cog"></i>
        <% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>opinion</h4>
  <%= f.text_area :body %>
	
  <%= f.submit 'Create Book' %>
<% end %>
  </div>
    </div>
    
    <div class = "col-lg-8"
    <h2>Books</h2>
      <!--一覧表示部分-->
     <table class="table striped">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr>
       </thead>
         <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
         </tbody>
       </table>
    </div>
  </div>
</div>
