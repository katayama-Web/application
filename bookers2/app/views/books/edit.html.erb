
<h1>Editing Book</h1>
<%= @book.errors.count %>error
<% if @book.errors.any? %>
  <div>
    <ul style="color: red">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @book do |f| %>
 <label for="InputTitle">Title</label>
 <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title"%>
 <%= f.text_field :body, autofocus: true, id:"inputTBody", placeholder:"opinion"%>
 <%= f.submit "Update Book" %>
 <% end %>
 
 <%= link_to "Show", book_path %>
 <%= link_to "Back", books_path %>