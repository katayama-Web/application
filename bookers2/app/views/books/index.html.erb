<div class="container">
  <div class="row">
    <div class="col-lg-4" >
      <div class="sidebar">
        <h1>User Info</h1>
        <%= image_tag @user.get_profile_image(100,100) %>
        <div>name</div> <div>><%= @user.name %></div>
        <div>introduction</div> <div><%= @user.introduction %></div>
<a class="btn btn-outline-socondary btn-block"href="/users/:id/edit">
  <i class="fas fa-user-cog"></i>
</a>
        <%= link_to "Edit",edit_user_path(@user.id), class: "btn btn-secondary" %>

        <h1>New Book</h1>

        <!-- form_with -->
        <%= form_with model: Book.new do |f| %>
          <h4>title</h4>
            <%= f.text_field :title %>
	
          <h4>opinion</h4>
            <%= f.text_area :body %>
	
              <%= f.submit 'Create Book' %>
        <% end %>
      </div>
    </div>
    <div class = "col-lg-8">
      <h1>Books</h1>
      <!--一覧表示部分-->
      <table class="table striped">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>